<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bottomSheetDialogBar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bottomSheetDialogClose"
        android:background="@drawable/ic_baseline_close_24"
        android:backgroundTint="@color/bottomSheetDialogFg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_gravity="end"
        />
<androidx.core.widget.NestedScrollView
    android:background="@color/bottomSheetDialogBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout
        android:id="@+id/marksLinearLayout"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.DayNight"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</LinearLayout>