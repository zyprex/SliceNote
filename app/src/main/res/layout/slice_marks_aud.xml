<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marksAudioView"
    android:theme="@style/ThemeOverlay.AppCompat.DayNight"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:scaleType="fitCenter"
        android:id="@+id/albumArt"
        android:src="@drawable/ic_baseline_music_note_24"
        android:background="#787"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="{audio_title}"
            android:id="@+id/audioTitle"
            android:ellipsize="marquee"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <SeekBar
            android:id="@+id/audioSeekBar"
            android:thumb="@drawable/seekbar_thumb"
            android:progressDrawable="@drawable/seekbar_progress"
            android:maxHeight="3dp"
            android:minHeight="3dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageButton
                android:src="@drawable/ic_baseline_play_disabled_24"
                android:id="@+id/audioPlay"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
            <ImageButton
                android:src="@drawable/ic_baseline_stop_24"
                android:id="@+id/audioStop"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
            <ImageButton
                android:src="@drawable/ic_baseline_open_in_new_24"
                android:id="@+id/audioOpenBy"
                android:layout_width="80dp"
                android:layout_height="40dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>